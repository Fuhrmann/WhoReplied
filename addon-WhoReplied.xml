<?xml version="1.0" encoding="utf-8"?>
<addon addon_id="WhoReplied" title="Who Replied" version_string="1.5.3" version_id="1050300" url="https://xenforo.com/community/resources/who-replied.1537/" install_callback_class="WhoReplied_Installer" install_callback_method="install" uninstall_callback_class="WhoReplied_Installer" uninstall_callback_method="uninstall">
