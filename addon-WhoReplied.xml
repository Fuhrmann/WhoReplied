<?xml version="1.0" encoding="utf-8"?>
<addon addon_id="WhoReplied" title="Who Replied" version_string="1.2.0" version_id="4" url="http://xenforo.com/community/resources/who-replied.1537/" install_callback_class="" install_callback_method="" uninstall_callback_class="" uninstall_callback_method="">
  <admin_navigation/>
  <admin_permissions/>
  <admin_style_properties/>
  <admin_templates/>
  <admin_template_modifications/>
  <code_events/>
  <code_event_listeners>
    <listener event_id="load_class_controller" execute_order="10" callback_class="WhoReplied_Listener" callback_method="extendControllerPublicThread" active="1" hint="XenForo_ControllerPublic_Thread" description=""/>
    <listener event_id="template_hook" execute_order="10" callback_class="WhoReplied_Listener" callback_method="templateHookListThreads" active="1" hint="thread_list_threads" description=""/>
    <listener event_id="template_hook" execute_order="10" callback_class="WhoReplied_Listener" callback_method="templateHookListStickies" active="1" hint="thread_list_stickies" description=""/>
    <listener event_id="template_post_render" execute_order="10" callback_class="WhoReplied_Listener" callback_method="templatePostRenderEWRBlock" active="1" hint="EWRblock_RecentThreads" description=""/>
    <listener event_id="template_post_render" execute_order="10" callback_class="WhoReplied_Listener" callback_method="templatePostRenderFindNewPosts" active="1" hint="find_new_posts" description=""/>
  </code_event_listeners>
  <cron/>
  <email_templates/>
  <email_template_modifications/>
  <optiongroups/>
  <permissions>
    <permission_groups/>
    <permissions>
      <permission permission_group_id="forum" permission_id="whoRepliedView" permission_type="flag" default_value="unset" interface_group_id="forumPermissions" display_order="1000"/>
    </permissions>
    <interface_groups/>
  </permissions>
  <phrases>
    <phrase title="permission_forum_whoRepliedView" version_id="3" version_string="1.1.0"><![CDATA[View Who Replied]]></phrase>
    <phrase title="whoreplied_members_who_replied" version_id="1" version_string="1.0.0"><![CDATA[Members Who Replied this thread]]></phrase>
    <phrase title="whoreplied_see_posts" version_id="3" version_string="1.1.0"><![CDATA[See all posts from this user in this thread]]></phrase>
    <phrase title="whoreplied_whoreplied" global_cache="1" version_id="1" version_string="1.0.0"><![CDATA[Who Replied?]]></phrase>
  </phrases>
  <route_prefixes/>
  <style_properties/>
  <templates>
    <template title="whoreplied.css" version_id="1" version_string="1.0.0"><![CDATA[.whoreplied_postcount {
    font-size: 30px;
}]]></template>
    <template title="whoreplied_list" version_id="3" version_string="1.1.0"><![CDATA[<xen:title>{xen:helper threadPrefix, $thread, escaped}{$thread.title} - {xen:phrase whoreplied_members_who_replied}</xen:title>
<xen:h1>{xen:phrase whoreplied_members_who_replied}</xen:h1>

<xen:container var="$head.noindex">
	<meta name="robots" content="noindex" />
</xen:container>

<xen:navigation>
	<xen:breadcrumb source="$nodeBreadCrumbs" />
	<xen:breadcrumb href="{xen:link full:posts, $post}">{xen:helper threadPrefix, $thread}{$thread.title}</xen:breadcrumb>
</xen:navigation>

<xen:require css="whoreplied.css" />

<div class="section">
	<dl class="subHeading pairsInline"><dt>{xen:phrase thread}:</dt> <dd><a href="{xen:link posts, $post}">{xen:helper threadPrefix, $thread}{$thread.title}</a></dd></dl>
	<ol class="overlayScroll">
        <xen:foreach loop="$users" value="$user">
		<xen:include template="member_list_item">
        	<xen:set var="$extraTemplate">
        		<div class="whoreplied_postcount">        			
                                <a href="{xen:link 'search/search', '', 'users={$user.username}', 'type=post', 'thread_id={$thread.thread_id}', 'o=date'}" target="_blank" title="{xen:phrase whoreplied_see_posts}">
                                    {$user.post_count}
                                </a>
    			</div>
    		</xen:set>
        </xen:include>
        </xen:foreach>
	</ol>
	<div class="sectionFooter overlayOnly"><a class="button primary OverlayCloser">{xen:phrase close}</a></div>
</div>]]></template>
  </templates>
  <public_template_modifications/>
  <bb_code_media_sites/>
</addon>
